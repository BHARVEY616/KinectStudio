<Window x:Class="KinectMotionAnalyzer.GestureRecognizerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GestureRecognizerWindow" Height="684" Width="777">
    <Grid>
        <Image HorizontalAlignment="Left" Margin="29,22,0,114" Name="skeleton_disp_img" Stretch="Uniform" Width="493" />
        <Slider Height="23" HorizontalAlignment="Left" Interval="1" IsEnabled="False" IsSnapToTickEnabled="True" Margin="58,537,0,0" Name="skeletonVideoSlider" VerticalAlignment="Top" Width="430" ValueChanged="skeletonVideoSlider_ValueChanged" />
        <Label BorderThickness="0" Content="0" FontStretch="Normal" Height="31" HorizontalAlignment="Left" Margin="269,557,0,0" Name="skeletonSliderLabel" VerticalAlignment="Top" />
        <Button Content="Capture" Height="31" HorizontalAlignment="Left" Margin="580,0,0,478" Name="gestureCaptureBtn" VerticalAlignment="Bottom" Width="98" Click="gestureCaptureBtn_Click" IsEnabled="False" />
        <StatusBar Background="#FFB49788" FontSize="18" Height="27" HorizontalAlignment="Left" Margin="12,606,0,0" Name="kinectStatusBar" VerticalAlignment="Top" Width="731">
            <Label Content="Welcome" Name="statusbarLabel" FontStretch="Medium" FontSize="10" />
        </StatusBar>
        <Button Content="Run" Height="31" HorizontalAlignment="Left" Margin="580,76,0,0" Name="kinectRunBtn" VerticalAlignment="Top" Width="98" Click="kinectRunBtn_Click" />
        <Button Content="Load Gesture" Height="31" HorizontalAlignment="Left" Margin="580,207,0,0" Name="gestureReplayBtn" VerticalAlignment="Top" Width="98" Click="gestureReplayBtn_Click" />
    </Grid>
</Window>
