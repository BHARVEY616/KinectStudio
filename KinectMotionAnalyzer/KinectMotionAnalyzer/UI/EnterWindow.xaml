<Window x:Class="KinectMotionAnalyzer.UI.EnterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="300" Width="398.161" FontSize="18">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Choose your type" HorizontalAlignment="Left" Margin="36,124,0,0" VerticalAlignment="Top" Height="123" Width="315" Grid.RowSpan="2" FontSize="20" FontFamily="Stencil" FontWeight="Bold">
            <Grid HorizontalAlignment="Left" Height="101" VerticalAlignment="Top" Width="305" Margin="0,0,-2,-8">
                <RadioButton x:Name="trainerSelectRadioBtn" Content="Trainer" HorizontalAlignment="Left" Margin="33,19,0,0" VerticalAlignment="Top" IsChecked="True"/>
                <RadioButton x:Name="userSelectRadioBtn" Content="User" HorizontalAlignment="Left" Margin="33,58,0,0" VerticalAlignment="Top"/>
                <Button x:Name="mainEnterBtn" Content="Enter" HorizontalAlignment="Left" Margin="181,34,0,0" VerticalAlignment="Top" Width="92" Height="48" Click="mainEnterBtn_Click"/>
            </Grid>
        </GroupBox>
        <Image HorizontalAlignment="Left" Height="85" Margin="36,21,0,0" VerticalAlignment="Top" Width="315" Source="/KinectMotionAnalyzer;component/Resources/Logo.jpg"/>

    </Grid>
</Window>
